@page "{id:long}"
@using AppContest.Models
@model AppContest.Pages.Contests.DeleteModel
@{
    ViewData["Title"] = Model.Data.Name;
}

<div class=container>
    <h2 class="fs-5 my-3">@ViewData["Title"]</h2>
    <hr />
    <dl class="small row mb-3">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Description)
        </dt>
        <dd class="col-sm-10">
            <display-tag for="Data.Description" />
        </dd>
        <dt class="col-sm-2">
            @((Model.Data.StartDate, Model.Data.EndDate).ToFriendlyDateTitle())
        </dt>
        <dd class="col-sm-10">
            @((Model.Data.StartDate, Model.Data.EndDate).ToFriendlyDate())
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Host)
        </dt>
        <dd class="col-sm-10">
            <display-tag for="Data.Host" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Requirements)
        </dt>
        <dd class="col-sm-10">
            <display-tag for="Data.Requirements" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Url)
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.Data.Url" rel="noreferrer external">@Model.Data.Url</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Note)
        </dt>
        <dd class="col-sm-10">
            <display-tag for="Data.Note" />
        </dd>
        <dt class="col-sm-2">
            公開/非公開
        </dt>
        <dd class="col-sm-10">
            @(Model.Data.IsHidden ? "非公開" : "公開中")
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Data.Id" />
        <input type="hidden" asp-for="Data.RowVersion" />

        <input type="submit" value="削除" class="btn btn-danger" />
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
